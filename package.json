    "license": "CC0-1.0",
    "scripts": {
        "prepare": "husky install",
        "dev": "vite --host",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "lint": "npx eslint src",
        "lint:fix": "yarn lint --fix",
        "prettier": "npx prettier src --check",
        "prettier:fix": "yarn prettier --write",
        "format": "yarn prettier:fix && yarn lint:fix",
        "cypress:open": "cypress open",
        "cypress:check": "yarn dev & (sleep 2 && cypress run --e2e --browser chrome && cypress run --component --browser chrome)",
        "husky:pre-commit": "yarn format && yarn cypress:check"
    },
    "dependencies": {
        "@ariakit/react": "^0.4.1",
        "animate.css": "^4.1.1",
